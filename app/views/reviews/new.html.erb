<h1>New Review</h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>

  <%= f.input :content %>
  <%= f.input :rating, collection: [0,1,2,3,4,5] %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Restaurant', restaurant_path(@restaurant) %>
<%= link_to 'Back to List', restaurants_path %>
